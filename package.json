{
  "name": "echostash-backend-automation",
  "version": "0.1.0",
  "description": "Echostash backend API automation tests with Vitest and TypeScript",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:sanity": "vitest run --include 'tests/sanity/**/*.test.ts'",
    "test:regression": "vitest run --include 'tests/regression/**/*.test.ts'",
    "test:auth": "vitest run -t 'auth|Auth|guest|Guest'",
    "test:prompts": "vitest run -t 'prompt|Prompt'",
    "test:sdk": "vitest run -t 'sdk|SDK'",
    "test:eval": "vitest run -t 'eval|Eval'",
    "test:keys": "vitest run -t 'key|Key|api.key'",
    "test:billing": "vitest run -t 'billing|Billing'",
    "test:plp": "vitest run -t 'plp|PLP'",
    "test:admin": "vitest run -t 'admin|Admin'",
    "test:public": "vitest run -t 'public|Public'",
    "test:watch": "vitest",
    "test:report": "vitest run --reporter=allure-vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "allure-vitest": "^3.0.7",
    "dotenv": "^16.4.7",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
